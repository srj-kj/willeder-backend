{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start-dev": "nodemon --exec ts-node src/index.ts",
    "serve:dev": "firebase use dev && yarn build && IS_LOCAL=1 firebase emulators:start --only functions",
    "serve:prod": "firebase use prod && yarn build && IS_LOCAL=1 firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions:wilderBackend",
    "deploy:dev": "firebase use dev && yarn build  && firebase deploy --only functions --debug",
    "deploy:prod": "firebase use prod && yarn build  && firebase deploy --only functions --debug",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@sendgrid/mail": "7.7.0",
    "axios": "1.4.0",
    "bcryptjs": "2.4.3",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dayjs": "1.11.8",
    "dotenv": "16.3.1",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "express": "4.18.2",
    "express-validator": "7.0.1",
    "firebase": "9.23.0",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "firebase-functions-test": "^3.1.0",
    "generate-password": "1.7.0",
    "jsonwebtoken": "9.0.0",
    "lodash": "4.17.21",
    "nodemailer": "^6.9.5",
    "randomstring": "1.3.0",
    "stripe": "12.10.0",
    "stripe-event-types": "2.3.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typescript": "^4.9.0",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/cookie-parser": "1.4.3",
    "@types/nodemailer": "^6.4.10",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/swagger-ui-express": "4.1.3",
    "@types/uuid": "9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "ts-node": "^10.9.1"
  },
  "private": true
}
